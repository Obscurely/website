    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix --customSyntax postcss-scss",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
